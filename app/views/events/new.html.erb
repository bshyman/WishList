<div class="card-body  ">
  <%= form_for @event do |f| %>
    <%= f.error_notification %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name, 'Event Name', class:'col-form-label'%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :join_code, 'Invite Code',  class:'col-form-label' %>
        <%= f.text_field :join_code, class: 'form-control', placeholder: 'Create a code to share to friends' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-check">
        <%= f.label :private_event, class: 'form-check-label' do %>
          Private
          <%= f.check_box :private_event, class: 'form-check-input public-checkbox', style:'margin-left: 10px;' %>
        <% end %>
      </div>
      <%= f.button 'Create', class: 'btn btn-primary', style: 'margin-left: 3vw;' %>
    </div>
  <% end %>
    </div>

