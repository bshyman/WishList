<%= content_for :page_navigation do %>
  <li>
    <%= link_to 'Home', root_path, class: 'nav-link' %>
  </li>
  <span class="nav-link">
  /
  </span>
  <li class="nav-link">
    <%= @user_event.event.name %>
  </li>
  <span class="nav-link">
  /
  </span>
  <li class="nav-link">
    User
  </li>
<% end %>





<table class="table table-hover table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% @gifts.each do |gift| %>
    <tr class="gift-row" data-id="<%= gift.id %>">
      <td><%= gift.name %></td>
      <td><%= number_to_currency(gift.price) %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">
  Launch
</button>

<!-- Modal -->
<div class="modal fade" id="gift_modal" tabindex="-1" role="dialog" aria-labelledby="gift_modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= render partial: 'gifts/gift', locals: {gift: @gifts.sample} %>
    </div>
  </div>
</div>

