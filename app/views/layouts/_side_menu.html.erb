<!-- Modal -->
<div class="modal fade" id="new_gift_modal" tabindex="-1" role="dialog" aria-labelledby="new_gift_modal-id" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with url: gifts_path, id: 'new-gift-form', scope: 'gift' do |f| %>
        <div class="modal-body">
          
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: 'form-control' %>
          
          <%= f.label :price, 'Max limit' %>
          <%= f.number_field :price, class: 'form-control' %>
          
          <%= f.label :url, 'URL' %>
          <%= f.text_field :url, class: 'form-control' %>
        
        </div>
        <div class="modal-footer fright">
          <%= f.submit 'Save', class: 'btn btn-primary ' %>
        </div>
      <% end %>
    </div>
  </div>
</div>